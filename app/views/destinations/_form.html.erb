<div class="row">
  <div class="col-md-12">
    <%= form_for(destination) do |f| %>
      <% if destination.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(destination.errors.count, "error") %> prohibited this destination from being saved:</h2>

          <ul>
          <% destination.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="input-group">
            <span class="input-group-addon">Destination</span>
            <%= f.text_field :name, 
                class: "form-control", 
                placeholder: "Destination Name" %>
          </div>
        </div>

        <div class="panel-footer">
          <div class="actions">
            <% if action_name == "new" %>
              <%= f.submit "Create Destination", class: "btn btn-success" %>
            <% else %>
              <%= f.submit "Update Destination", class: "btn btn-success" %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>