<div class="row">
  <div class="col-md-12">
    <%= form_for(sale) do |f| %>
      <% if sale.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(sale.errors.count, "error") %> prohibited this sale from being saved:</h2>

          <ul>
          <% sale.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="input-group">
            <span class="input-group-addon">Amount</span>
            <%= f.number_field :amount, 
                class: "form-control", 
                placeholder: "Amount" %>
          </div>
          
          <br>

          <div class="input-group">
            <span class="input-group-addon">Agent</span>
            <%= f.collection_select(:agent_id, @agents, :id, :name,
                { :prompt => 'Select an Agent', :selected => sale.agent_id },
                { class: 'form-control' }) %>
          </div>

          <br>

          <div class="input-group">
            <span class="input-group-addon">Destination</span>
            <%= f.collection_select(:destination_id, @destinations, :id, :name,
                { :prompt => 'Select a Destination', :selected => sale.destination_id },
                { class: 'form-control' }) %>
          </div>
        </div>
      
        <div class="panel-footer">
          <div class="actions">
            <% if action_name == "new" %>
                <%= f.submit "Create Sale", class: "btn btn-success" %>
              <% else %>
                <%= f.submit "Update Sale", class: "btn btn-success" %>
              <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>