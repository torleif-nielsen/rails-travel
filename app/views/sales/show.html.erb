<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <p id="notice"><%= notice %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          Amount
        </div>
        <div class="panel-body">
          <%= number_to_currency(@sale.amount) %>
        </div>
      </div>
    </div>

    <div class="col-md-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          Agent
        </div>
        <div class="panel-body">
          <%= @sale.agent.name %>
        </div>
        <div class="panel-footer">
          <%= link_to "Agent Details", @sale.agent,
              class: "btn btn-sm btn-info" %>
        </div>
      </div>
    </div>

    <div class="col-md-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          Destination
        </div>
        <div class="panel-body">
          <%= @sale.destination.name %>
        </div>
        <div class="panel-footer">
          <%= link_to "Destination Details", @sale.destination,
              class: "btn btn-sm btn-info" %>
        </div>
      </div>
    </div>

    <div class="col-md-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          Date Created
        </div>
        <div class="panel-body">
          <%= @sale.created_at.strftime("%B %d, %Y") %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="btn-toolbar" role="toolbar">
        <%= link_to 'Edit', edit_sale_path(@sale),
            class: "btn btn-warning" %> 
        <%= link_to 'Back', sales_path,
            class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>